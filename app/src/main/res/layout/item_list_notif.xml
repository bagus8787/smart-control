<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@android:color/white">

        <TextView
            android:id="@+id/txt_v_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:text="Beri pakan berhasil"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_v_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_check" />

        <TextView
            android:id="@+id/txt_v_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_v_title"
            android:layout_alignStart="@+id/txt_v_title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:text="Berhasil" />

        <TextView
            android:id="@+id/txt_v_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_v_body"
            android:layout_alignStart="@+id/txt_v_body"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="10-10-2021, 09.00 WIB" />

    </RelativeLayout>
</LinearLayout>