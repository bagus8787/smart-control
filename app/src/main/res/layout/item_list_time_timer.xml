<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:text="21:30"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_vjmlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time"
        android:layout_alignStart="@+id/txt_time"
        android:layout_marginStart="-28dp"
        android:layout_marginTop="1dp"
        android:text="Jumlah takaran :"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_vjmlah"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txt_vjmlah"
        android:text="3 Kali"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/txt_vjmlah" />

    <Switch
        android:visibility="gone"
        android:id="@+id/sw_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp" />

    <ImageView
        android:id="@+id/img_edit_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delete_edit_alarm"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/delete_edit_alarm"
        android:src="@drawable/ic_baseline_edit"
        app:tint="@color/colorPrimary" />


    <ImageView
        android:id="@+id/delete_edit_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_baseline_delete"
        app:tint="@android:color/holo_red_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>